@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.Aan.SharedUi.Constants;
@using SFA.DAS.Aan.SharedUi.Extensions;
@using SFA.DAS.Aan.SharedUi.Infrastructure;
@using SFA.DAS.Aan.SharedUi.Models;
@using SFA.DAS.Aan.SharedUi.Models.EditContactDetail;
@using SFA.DAS.Aan.SharedUi.TagHelpers;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, SFA.DAS.Aan.SharedUi


@model EditContactDetailViewModel;

@{
    ViewData["Title"] = "Edit Contact Detail";
}
<partial name="_validationSummary" />
<div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-margin-top-4 govuk-!-margin-bottom-2">Contact details</h1>
        <p class="contact-section-description">
            Here is the current contact information the network holds about you. This information is taken from your existing apprenticeship account and can not be changed on this page.
        </p>
        <h2 class="govuk-heading-m govuk-!-margin-top-6 govuk-!-margin-bottom-4">Email address</h2>
        <div class="govuk-!-margin-top-2 govuk-!-margin-bottom-4">@Model.Email</div>
        <p class="contact-section-description">
            Your email address is not visible to other ambassadors. However, you will receive network updates, communications and messages from other members to this email address.
        </p>
        <form method="post" asp-route="@SharedRouteNames.EditContactDetail" enctype="multipart/form-data" novalidate>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

            <div esfa-validation-marker-for="LinkedinUrl">
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" for="LinkedinUrl">
                        LinkedIn profile url
                    </label>
                    <span asp-validation-for="LinkedinUrl" class="govuk-error-message"></span>
                    <div class="govuk-input__wrapper">
                        <div class="govuk-input__prefix" aria-hidden="true">@UrlConstant.LinkedinUrl</div>
                        <input type="text" asp-for="LinkedinUrl" class="govuk-input" maxlength="100" name="LinkedinUrl" spellcheck="false">
                    </div>
                </div>
            </div>

            <div esfa-validation-marker-for="ShowLinkedinUrl">
                <div class="govuk-!-margin-top-7 govuk-!-margin-bottom-7">
                    <span asp-validation-for="ShowLinkedinUrl" class="govuk-error-message"></span>
                    <div id="DisplayLinkedinUrl" class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" type="checkbox" asp-for=@Model.ShowLinkedinUrl>
                        <label class="govuk-label govuk-checkboxes__label profile-govuk-checkboxes" asp-for="ShowLinkedinUrl">
                            Display LinkedIn information on my profile page
                        </label>
                    </div>
                </div>
            </div>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
            <div class="govuk-button-group">
                <button id="saveChanges" type="submit" data-disable-on-submit="true" class="govuk-button" data-module="govuk-button">
                    Save changes
                </button>
                <a class="govuk-link" href="@Model.YourAmbassadorProfileUrl">Cancel</a>
            </div>
        </form>
    </div>
</div>