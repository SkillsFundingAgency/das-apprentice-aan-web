@using SFA.DAS.Aan.SharedUi.Models;

@model NotificationSentConfirmationViewModel

@{
    ViewData["Title"] = $"Notification Sent";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Your message has been sent successfully
            </h1>
        </div>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p class="govuk-body">
            You have successfully sent your message and your recipient will receive an email outlining your request
        </p>

        <ul class="govuk-list app-icon-list">
            <li>
                <h2 class="govuk-heading-m"><a href="@Model.NetworkDirectoryUrl" class="govuk-link govuk-link--no-visited-state">Network Directory</a></h2>
                <p>Connect and network with other ambassadors across England.</p>
                <svg class="app-icon-list__icon"><use href="/img/sprite.svg#icon-handshake" /></svg>
            </li>
        </ul>
    </div>
</div>

