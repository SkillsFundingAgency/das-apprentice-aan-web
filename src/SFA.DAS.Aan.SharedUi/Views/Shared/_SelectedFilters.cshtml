@using SFA.DAS.Aan.SharedUi.Infrastructure;
@using SFA.DAS.Aan.SharedUi.Models.NetworkEvents;

@model SelectedFiltersModel

@if (Model.ShowFilterOptions)
{
    <div class="das-filter__selected-filters">
        <div class="das-filter__selected-header">
            <h3 class="das-filter__selected-heading">Selected filters</h3>
            <a class="das-filter__selected-action govuk-link govuk-link--no-visited-state" href="@Model.ClearSelectedFiltersLink">Clear <span class="govuk-visually-hidden">the selected filters</span></a>
        </div>
        @foreach (var filters in Model.SelectedFilters.OrderBy(x=>x.FieldOrder))
        {
            <h4 class="das-filter__selected-sub-heading">@filters.FieldName</h4>
            @foreach (var filter  in filters.Filters.OrderBy(x=>x.Order))
            {
                <a href="@filter.ClearFilterLink" class="das-filter__tag das-breakable">@filter.Value</a>
            }
        }
    </div>
}
